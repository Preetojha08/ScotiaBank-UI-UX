<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoveMoneyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interact E-Transfer"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="@color/red"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/scotia_bold"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/button_sqaure_bg"
           android:padding="@dimen/_10sdp"
           android:orientation="vertical">

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/move_money_interact_rv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/_5sdp" />

       </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Payments"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="@color/red"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/scotia_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_sqaure_bg"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/move_money_other_pay_rv"
                android:padding="@dimen/_5sdp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Money International"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="@color/red"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/scotia_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_sqaure_bg"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/move_money_international_rv"
                android:padding="@dimen/_5sdp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="© Creatures ♥ All Right Reserved"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="@color/red"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:fontFamily="@font/scotia_regular"/>

    </LinearLayout>

</ScrollView>